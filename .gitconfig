[user]
	name = Matthew Brown
	email = matthew.e.brown.17@gmail.com
	signingkey = B0B1F8189AE6CCFE5E7F354A3ACCD07F1192037C
[commit]
	gpgsign = true
[init]
	defaultBranch = main
[core]
	editor = vim
	pager = delta
	safecrlf = false  # diables 'CRLF will be replaced with LF' warnings
	fsmonitor = true  # can help speed up git commands
	packedGitLimit = 512m
	packedGitWindowSize = 512m
[pack]
	deltaCacheSize = 2047m
	packSizeLimit = 2047m
	windowMemory = 2047m
[alias]
	ck = checkout
	ch = checkout
	st = status -sb
	stat = status
	un = restore --staged
	unstage = restore --staged
	lg = log --graph --decorate --all --oneline
	lg1 = log --graph --decorate --all
	amend = commit --amend --no-edit
[interactive]
	diffFilter = delta --color-only
[merge]
	conflictstyle = diff3
[push]
	autoSetupRemote = true
[diff]
	colorMoved = default
	navigate = true
[delta]
	side-by-side = true
	line-numbers = true
	features = decorations
