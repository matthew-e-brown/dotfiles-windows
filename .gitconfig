[user]
	name = Matthew Brown
	email = matthew.e.brown.17@gmail.com
[core]
	editor = vim
	pager = delta
	fsmonitor = true
[alias]
	ck = checkout
	ch = checkout
	st = status
	lg = log --graph --decorate --all --oneline
	lg1 = log --graph --decorate --all
	amend = commit --amend --no-edit
	ammend = amend # I always fuck this up lol
[interactive]
	diffFilter = delta --color-only
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
	navigate = true
[delta]
	side-by-side = true
	line-numbers = true
	features = decorations
[init]
	defaultBranch = master
